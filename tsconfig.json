{
 "compilerOptions": {
  "target": "ES5",
  "outDir": "./dist",
  "module": "commonjs",
  "baseUrl": ".",
  "paths": {
   "src/*": ["src/*"]
  },
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "strict": true,
  "noImplicitAny": true,
  "skipLibCheck": true
 },
 "include": ["src/**/*", "@types/index.d.ts"],
 "exclude": ["node_modules", "dist"]
}
